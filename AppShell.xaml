<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Aplicativo_Promotor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Aplicativo_Promotor.Pages"
    FlyoutBackgroundColor="Gray">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="WhiteSmoke">
            <Image Source="heinekenlogo.png"/>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Introdução" Icon="introducao.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:IntroducaoPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Produtos" Icon="iconprodutos.png">
        <ShellContent 
            ContentTemplate="{DataTemplate local:ProdutosPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Sovi" Icon="iconsovi.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:SoviPage}"/>
    </FlyoutItem>

</Shell>
