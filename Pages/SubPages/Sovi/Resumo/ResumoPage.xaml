            <!-- Logo & Dados Badden Badden -->
            <StackLayout>
                <Image
                    Margin="0,-40,0,0"
                    Source="baddenlogo.png"
                    HeightRequest="90"
                    WidthRequest="90"
                    Aspect="AspectFit" />

                <!-- Dados Badden Badden -->
                
            </StackLayout>


            <!-- Linha de Ligação -->
            <Line
                HorizontalOptions="CenterAndExpand"
                Margin="0,-10,0,0"
                X1="0"
                Y1="0"
                X2="0"
                Y2="80"
                Stroke="yellow"
                StrokeThickness="0.5" />
            <!-- Logo & Dados Bluemoon -->
            <StackLayout>
                <Image
                    Margin="0,-40,0,0"
                    Source="bluemoonlogo.png"
                    HeightRequest="90"
                    WidthRequest="90"
                    Aspect="AspectFit" />

                <!-- Dados Bluemoon -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                        <RowDefinition
                            Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Coluna 1 -->
                    <Frame
                        Grid.Row="0"
                        Grid.Column="0"
                        BorderColor="Gray"
                        CornerRadius="5">
                        <Label
                            Text="Craft Total: 0" />
                    </Frame>
                    <Frame
                        Grid.Row="1"
                        Grid.Column="0"
                        BorderColor="Gray"
                        CornerRadius="5">
                        <Label
                            Text="Craft Total: 0" />
                    </Frame>
                    <Frame
                        Grid.Row="2"
                        Grid.Column="0"
                        BorderColor="Gray"
                        CornerRadius="5">
                        <Label
                            Text="Craft Total: 0" />
                    </Frame>

                    <!-- Coluna 2 -->
                    <Frame
                        Grid.Row="0"
                        Grid.Column="1"
                        BorderColor="Gray"
                        CornerRadius="5">
                        <Label
                            Text="Craft Total: 0" />
                    </Frame>
                    <Frame
                        Grid.Row="1"
                        Grid.Column="1"
                        BorderColor="Gray"
                        CornerRadius="5">
                        <Label
                            Text="Craft Total: 0" />
                    </Frame>
                    <Frame
                        Grid.Row="2"
                        Grid.Column="1"
                        BorderColor="Gray"
                        CornerRadius="5">
                        <Label
                            Text="Craft Total: 0" />
                    </Frame>
                </Grid>
            </StackLayout>


            <Button
                Grid.Column="1"
                Grid.Row="4"
                Text="Exportar Dados"
                Clicked="SalvarComoPDF_Clicked">
            </Button>
        </StackLayout>
    </ScrollView>
