    Title="Resumo"
    BackgroundColor="#121B1A">

    <!-- Conteúdo da página -->
    <ScrollView>

        <StackLayout
            Spacing="15"
            Padding="10,0"
            Margin="0,0,0,0">

            <!-- Data Atual -->
            <Label
                x:Name="DataAtual"
                Text="Data atual: "
                TextColor="White"
                HorizontalOptions="End" />

            <!-- Nome da Loja -->
            <Label
                x:Name="LojaName"
                Text="Nome da Loja: "
                TextColor="White"
                HorizontalOptions="End" />

            <!-- Title -->
            <Label
                Text="Resumo Total"
                HorizontalOptions="CenterAndExpand"
                FontAttributes="Bold"
                FontSize="Subtitle"
                TextColor="White" />


            <!-- Linha de Ligação -->
            <Line
                x:Name="MinhaLinha"
                HorizontalOptions="CenterAndExpand"
                Margin="0,-10,0,0"
                X1="0"
                Y1="0"
                X2="0"
                Y2="80"
                Stroke="yellow"
                StrokeThickness="0.5" />

            <!-- Craft -->
            <Label
                Margin="0,-25,0,0"
                Text="CRAFT's"
                HorizontalOptions="CenterAndExpand"
                FontAttributes="Bold"
                FontSize="Subtitle"
                TextColor="White" />

            <Label
                Text="Craft Total:" />
